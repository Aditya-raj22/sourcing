# Environment Configuration
# Copy this from .env.example and fill in real values

# OpenAI API Configuration (REQUIRED for AI features)
OPENAI_API_KEY=sk-dummy-key-for-testing
OPENAI_MODEL_GPT=gpt-4-turbo-preview
OPENAI_MODEL_EMBEDDING=text-embedding-3-large

# Gmail API Configuration (REQUIRED for sending emails)
GMAIL_CLIENT_ID=dummy
GMAIL_CLIENT_SECRET=dummy
GMAIL_REFRESH_TOKEN=dummy
GMAIL_SENDER_EMAIL=test@example.com

# Database Configuration
DATABASE_URL=sqlite:///./outreach.db

# Budget and Quota Limits
DAILY_BUDGET_LIMIT=100.00
GMAIL_DAILY_SEND_LIMIT=500
MAX_SPAM_SCORE=5.0

# Scheduling Configuration
FOLLOWUP_DAYS=7
MAX_FOLLOWUPS=3
SKIP_WEEKENDS=true
RESPECT_BUSINESS_HOURS=true

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
CACHE_ENABLED=true
