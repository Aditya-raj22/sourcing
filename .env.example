# Environment Configuration Template
# Copy this to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_GPT=gpt-4-turbo-preview
OPENAI_MODEL_EMBEDDING=text-embedding-3-large

# Email Provider Selection
EMAIL_PROVIDER=powerautomate  # Options: "powerautomate" (Duke with DUO), "smtp", or "gmail"

# Power Automate Webhook (RECOMMENDED for Duke email with DUO 2FA)
# No Azure setup needed! Just create a simple flow - see POWER_AUTOMATE_SETUP.md
POWER_AUTOMATE_WEBHOOK_URL=https://prod-xx.eastus.logic.azure.com:443/workflows/.../triggers/manual/...

# SMTP Configuration (for email providers without 2FA)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your.email@example.com
SMTP_PASSWORD=your_password
SMTP_USE_TLS=true

# Gmail API Configuration (OPTIONAL - Only needed if EMAIL_PROVIDER=gmail)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_SENDER_EMAIL=your_email@gmail.com

# Database Configuration
DATABASE_URL=sqlite:///./outreach.db

# Budget and Quota Limits
DAILY_BUDGET_LIMIT=100.00
GMAIL_DAILY_SEND_LIMIT=500
MAX_SPAM_SCORE=5.0

# Scheduling Configuration
FOLLOWUP_DAYS=7
MAX_FOLLOWUPS=3
SKIP_WEEKENDS=true
RESPECT_BUSINESS_HOURS=true

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
CACHE_ENABLED=true
